<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>testServlet</servlet-name>
        <servlet-class>com.xinyang.controller.testServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>testServlet</servlet-name>
        <url-pattern>/testServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.xinyang.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.xinyang.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addArticle</servlet-name>
        <servlet-class>com.xinyang.controller.AddArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addArticle</servlet-name>
        <url-pattern>/addArticle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getAllArticle</servlet-name>
        <servlet-class>com.xinyang.controller.GetAllArtServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllArticle</servlet-name>
        <url-pattern>/getAllArticle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>firstSession</servlet-name>
        <servlet-class>com.xinyang.controller.FirstSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>firstSession</servlet-name>
        <url-pattern>/firstSession</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>secondSession</servlet-name>
        <servlet-class>com.xinyang.controller.SecondSessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>secondSession</servlet-name>
        <url-pattern>/secondSession</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkCookie</servlet-name>
        <servlet-class>com.xinyang.controller.CheckCookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkCookie</servlet-name>
        <url-pattern>/checkCookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteArticle</servlet-name>
        <servlet-class>com.xinyang.controller.DeleteArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteArticle</servlet-name>
        <url-pattern>/deleteArticle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchArt</servlet-name>
        <servlet-class>com.xinyang.controller.SearchArtServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchArt</servlet-name>
        <url-pattern>/searchArt</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>modifyArt</servlet-name>
        <servlet-class>com.xinyang.controller.ModifyArtServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modifyArt</servlet-name>
        <url-pattern>/modifyArt</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>article</servlet-name>
        <servlet-class>com.xinyang.controller.ArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>article</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CountFilter</filter-name>
        <filter-class>com.xinyang.controller.CountFilter</filter-class>
        <init-param>
            <param-name>count</param-name>
            <param-value>5000</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CountFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

</web-app>